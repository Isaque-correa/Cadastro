@model List<Cliente>

@{
	ViewData["Title"] = "Lista de Cliente";
}
<section>
    <header class="d-flex justify-content-between align-items-center">
        <h1>Todos os Clientes</h1>
        <a class="mb-3 btn btn-primary" asp-action="adicionar">+ Cadastro</a>
    </header>
    
    <table class="table">
        <tr>
            <td>Nome</td>
            <td>Telefone</td>
            <td>CPF</td>
            <td>Ações</td>
            <td></td>
        </tr>

        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.CPF</td>
                <td><a asp-action="Editar" asp-route-idCliente="@cliente.IdCliente">Editar</a></td>
                <td><a asp-action="ExcluirCliente" asp-route-idCliente="@cliente.IdCliente">Excluir</a></td>
            </tr>
        }
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5" align="center">LISTA VAZIA</td>
            </tr>
        }
    </table>

</section>


