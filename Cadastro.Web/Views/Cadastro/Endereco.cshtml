@model Endereco
@{
}
<section>
	<header class="d-flex justify-content-between align-items-center">
		<h1>Castro de Endereço</h1>
		<a class="btn btn-light btnBack" asp-action="index">Voltar</a>
	</header>
	<form asp-action="Endereco" method="post">
		<input type="hidden" asp-for="IdCliente" />
		<div class="mb-3">
			<label asp-for="Logradouro">Endereço</label>
			<input asp-for="Logradouro" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="CEP">CEP</label>
			<input asp-for="CEP" class="form-control" />
		</div>		
		<div class="mb-3">
			<label asp-for="Cidade">Cidade</label>
			<input asp-for="Cidade" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Estado">Estado</label>
			<input asp-for="Estado" class="form-control" />
		</div>		

		<button class="mb-3 btn btn-primary">Cadastrar</button>

	</form>

</section>
